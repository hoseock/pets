<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="sample">
 	<select id="selectMemberList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT USER_ID,
                   USER_NM,
                   USER_PHONE,
                   USER_EMAIL,
                   PAARO
              FROM
                   MEMBERS
        ]]>
    </select>
    
    <select id = "checkId" parameterType = "String" resultType = "int">
    	SELECT COUNT(*) 
    	  FROM MEMBERS 
    	 WHERE USER_ID = #{ID}
	</select>

	<insert id="insertInfo" parameterType="command">
	    <![CDATA[
	        INSERT INTO MEMBERS
	        (
	            USER_ID,
	            USER_PASS,
	            USER_NM,
	            USER_PHONE,
	            USER_EMAIL,
	            USER_PCODE,
	            USER_ADDR1,
	            USER_ADDR2,
	            USER_PETTYPE,
	            USER_PETRACE
	        )
	        VALUES
	        (
	            #{ID},
	            #{PASSWORD},
	            #{NAME},
	            #{PHONE},
	            #{EMAIL},
	            #{PCODE},
	            #{ADDR1},
	            #{ADDR2},
	            #{PETTYPE},
	            #{PETRACE}    
	        )
	    ]]>
	</insert>
	
	<update id="updateHitCnt" parameterType="command">
	    <![CDATA[
	        UPDATE TB_BOARD
	        SET HIT_CNT = NVL(HIT_CNT, 0) + 1
	        WHERE IDX = #{IDX}   
	    ]]>
	</update>

	<update id="authorize" parameterType="command">
	    <![CDATA[
	        UPDATE MEMBERS
	        SET
	            PAARO = PAARO+1
	        WHERE
	            USER_ID = #{ID}   
	    ]]>
	</update>
	<update id="delAuthority" parameterType="command">
	    <![CDATA[
	        UPDATE MEMBERS
	        SET
	            PAARO = PAARO-1
	        WHERE
	            USER_ID = #{ID}   
	    ]]>
	</update>
