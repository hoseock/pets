<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="admin">
 	<select id="selectMemberList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT USER_ID,
                   USER_NM,
                   USER_PHONE,
                   USER_EMAIL,
                   USER_AUTH
              FROM
                   USERS
        ]]>
    </select>
   
	<update id="authorize" parameterType="command">
	    <![CDATA[
	        UPDATE USERS
	        SET
	            USER_AUTH = 'Y'
	        WHERE
	            USER_ID = #{ID}   
	    ]]>
	</update>
	<update id="delAuthority" parameterType="command">
	    <![CDATA[
	        UPDATE USERS
	        SET
	            USER_AUTH = 'N'
	        WHERE
	            USER_ID = #{ID}   
	    ]]>
	</update>
	<delete id="deleteMember" parameterType="command">
		<![CDATA[
			DELETE FROM USERS
 			WHERE 
 				USER_ID = #{ID}
		]]> 
	</delete>
	
	<select id = "checkAuth" parameterType = "String" resultType = "String">
    	SELECT USER_AUTH 
    	  FROM USERS
    	 WHERE USER_ID = #{ID}
	</select>
	
</mapper>